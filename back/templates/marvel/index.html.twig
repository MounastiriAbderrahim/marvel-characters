{% extends 'base.html.twig' %}

{% block title %}Marvel List{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .div-btn {
            margin-bottom: 20px;
        }

        .btn-update {
            display: block;
            margin-left: auto;
            margin-right: 20px;
        }
    </style>

    <div class="example-wrapper">
        <div class="row div-btn">
            <a class="btn btn-primary btn-update" href="#">Update list</a>
        </div>
        <div class="row">
            <table id="dtBasicExample" class="table" width="100%">
                <thead>
                <tr>
                    <th class="th-md" style="width: 200px">Name

                    </th>
                    <th class="th-md" style="width: 280px">Picture

                    </th>
                    <th class="th-md" style="width: 200px">Created At

                    </th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
{% endblock %}
